{
  "extends": [
    "next",
    "eslint:recommended",
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],

  "ignorePatterns": ["postcss.config.js", "tailwind.config.js"],
  "rules": {
    "no-console": "off",
    "no-alert": "off",
    "prettier/prettier": ["error", { "endOfLine": "auto" }]
  },
  "globals": {
    "React": true,
    "JSX": true
  }
}
